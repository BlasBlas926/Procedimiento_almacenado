@model Categorias
<h5>Editar categoria</h5>
<form asp-action="Edit" asp-route-id="@Model.Id">
    <div class="form-group">
        <label for="Nombre">
            Nombre:
            <input asp-for="Nombre" class="from-control" />
        </label>
        <label for="Precio">
            Precio:
            <input asp-for="Precio" class="from-control" />
        </label>
        <label for="Cantidad">
            Cantidad:
            <input asp-for="Cantidad" class="from-control" />
        </label Fecha_Registro>
        <label for="Fecha_Registro">
            <input asp-for="Fecha_Registro" class="from-control" type="date" />
        </label>
        <label for="Estado">
            Estado:
            <input asp-for="Estado" class="from-control" />
        </label>
        <button type="=submit" class="btn btn-warning">Actualizar</button>
        <a asp-action="Index">Regresar</a>
</form>